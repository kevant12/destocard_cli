{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Finaliser votre paiement</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    Récapitulatif de la commande
                </div>
                <div class="card-body">
                    <p>Montant total à payer : <strong>{{ (total)|number_format(2, ',', ' ') }} €</strong></p>
                    <hr>
                    <div id="payment-element">
                        <!-- Stripe Payment Element will be inserted here -->
                    </div>
                    <button id="submit" class="btn btn-success mt-3">Payer maintenant</button>
                    <div id="payment-message" class="mt-3 text-danger"></div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        // Ces variables seront définies par le contrôleur et passées au JavaScript
        // via des attributs data- ou des variables globales si nécessaire.
        // Pour l'instant, elles sont ici pour référence.
        const clientSecret = '{{ clientSecret }}';
        const stripePublicKey = '{{ stripe_public_key }}';
        const confirmOrderUrl = '{{ path('app_confirm_order') }}';
    </script>
{% endblock %}