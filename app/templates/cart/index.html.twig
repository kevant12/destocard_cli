{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="cart-main-container container">
    <h1 class="site-title" style="margin-bottom: 2rem;">Votre panier</h1>

    {% if cart is empty %}
        <p class="text-center">Votre panier est vide.</p>
    {% else %}
        <div class="cart-table-wrapper">
            <table class="cart-table" role="table" aria-label="Contenu du panier">
                <thead>
                    <tr>
                        <th scope="col">Produit</th>
                        <th scope="col">Image</th>
                        <th scope="col">Prix unitaire</th>
                        <th scope="col">Quantit√©</th>
                        <th scope="col">Total</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in cart %}
                        <tr data-product-id="{{ item.product.id }}">
                            <td class="cart-product-name">{{ item.product.title }}</td>
                            <td class="cart-product-image">
                                {% if item.product.media|first %}
                                    <img src="{{ asset(item.product.media|first.path) }}" alt="{{ item.product.title }}" style="width: 50px; height: 50px; object-fit: cover;">
                                {% else %}
                                    <img src="{{ asset('images/placeholder.png') }}" alt="Image non disponible" style="width: 50px; height: 50px; object-fit: cover;">
                                {% endif %}
                            </td>
                            <td class="cart-product-price">{{ item.product.price|number_format(2, ',', ' ') }} ‚Ç¨</td>
                            <td class="cart-quantity">1</td>
                            <td class="cart-item-total">{{ item.totalItemPrice|number_format(2, ',', ' ') }} ‚Ç¨</td>
                            <td>
                                <button class="cart-remove-btn" 
                                        data-product-id="{{ item.product.id }}" 
                                        data-csrf-token="{{ csrf_token('cart_remove' ~ item.product.id) }}" 
                                        title="Retirer du panier"
                                        aria-label="Retirer {{ item.product.title }} du panier">
                                    üóëÔ∏è
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="cart-summary">
            <div class="cart-total">
                Total : <span id="cart-total">{{ total|number_format(2, ',', ' ') }}</span> ‚Ç¨
            </div>
            <div class="cart-actions">
                <form method="post" action="{{ path('cart_buy') }}">
                    <button type="submit" class="btn btn--primary" aria-label="Proc√©der au paiement">Passer la commande</button>
                </form>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/cart.js') }}" defer></script>
{% endblock %}