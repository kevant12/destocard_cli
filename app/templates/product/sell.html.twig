{% extends 'base.html.twig' %}

{% block title %}Mettre en vente une carte{% endblock %}

{% block body %}
<section class="container">
    <h1 class="site-title">Mettre en Vente</h1>
    
    <div class="layout-grid layout-grid--sidebar">
        <aside class="sidebar">
            <div class="card">
                <div class="card__image-container">
                    {% if pokemonCard.image and pokemonCard.image.path %}
                        <img src="{{ asset(pokemonCard.image.path) }}" alt="{{ pokemonCard.name }}">
                    {% endif %}
                </div>
                <div class="card__body">
                    <h2 class="card__title">{{ pokemonCard.name }}</h2>
                    <p class="card__subtitle">{{ pokemonCard.extension.name }} - {{ pokemonCard.number }}</p>
                </div>
            </div>
        </aside>

        <div class="main-content">
            <div class="card">
                <div class="card__body">
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.title) }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.price) }}
                            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.quantity) }}
                            {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.imageFiles) }}
                            {{ form_widget(form.imageFiles, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <button type="submit" class="btn btn--primary" style="width: 100%;">Mettre en vente</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %} 