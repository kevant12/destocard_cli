{% extends 'base.html.twig' %}

{% block title %}Mes Articles en Vente{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/user-products.css') }}">
{% endblock %}

{% block body %}
<section class="container">
    <div class="page-header">
        <h1 class="site-title">Mes Articles en Vente</h1>
        <a href="{{ path('app_product_new') }}" class="btn btn--primary">Mettre un nouvel article en vente</a>
    </div>

    {# Les messages flash (succ√®s, erreur) peuvent √™tre ajout√©s ici si n√©cessaire #}

    {% if pagination is empty %}
        <div class="text-center" style="padding: 4rem 0;">
            <p>Vous n'avez pas encore d'articles en vente.</p>
            <p>Cliquez sur "Mettre un nouvel article en vente" pour commencer !</p>
        </div>
    {% else %}
        <div class="layout-grid">
            {% for product in pagination %}
                <div class="card product-card--user {% if product.quantity == 0 %}is-unavailable{% endif %}">
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="card__image-container">
                        {% if product.media|first and product.media|first.path %}
                            <img src="{{ asset(product.media|first.path) }}" alt="{{ product.title }}">
                        {% else %}
                            <img src="{{ asset('images/placeholder.png') }}" alt="Image non disponible">
                        {% endif %}
                    </a>
                    <div class="card__body">
                        <h2 class="card__title">
                            <a href="{{ path('app_product_show', {'id': product.id}) }}">{{ product.title }}</a>
                        </h2>
                        <p class="card__subtitle">{{ product.price|number_format(2, ',', ' ') }} ‚Ç¨ - Quantit√© : {{ product.quantity }}</p>
                        <div class="product-status-badge {% if product.quantity > 0 %}is-available{% else %}is-unavailable{% endif %}">
                            {{ product.quantity > 0 ? 'En stock' : '√âpuis√©' }}
                        </div>
                    </div>
                    <div class="card__footer" style="display:flex; gap: 0.5rem;">
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn--secondary" style="flex-grow:1;">Modifier</a>
                        <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cet article ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button class="btn btn--secondary" style="background-color: var(--color-error); border-color: var(--color-error); color: white;">üóëÔ∏è</button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="pagination">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% endif %}
</section>
{% endblock %}
