{# templates/security/login.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Connexion à votre compte Destocard{% endblock %}

{% block meta_description %}Connectez-vous à votre espace personnel Destocard pour gérer vos commandes, vos favoris et vos annonces de cartes Pokémon.{% endblock %}



{% block body %}
<div class="login-container">
    <a href="{{ path('app_home') }}" class="back-arrow" title="Retour à l'accueil">&#8592; Accueil</a>
    <h1 class="login-title">Connexion</h1>

    {# Affichage des erreurs de sécurité (UserChecker, etc.) #}
    {% if error %}
        <div class="alert alert-error login-error" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-error login-error" role="alert">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success login-success" role="alert">{{ message }}</div>
    {% endfor %}

    <form method="post" class="login-form" aria-labelledby="login-title">
        <div class="login-form-group">
            <label for="username">Email :</label>
            <input type="email" id="username" name="_username" value="{{ last_username }}" required autofocus class="login-input" aria-label="Adresse email">
        </div>
        <div class="login-form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="_password" required class="login-input" aria-label="Mot de passe">
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit" class="login-btn btn btn-add" aria-label="Se connecter">Se connecter</button>
    </form>

    <div class="text-center mt-3">
        <a href="{{ path('app_reset_password_request') }}" class="text-muted">Mot de passe oublié ?</a>
    </div>

    <fieldset class="login-register-fieldset">
        <legend class="login-register-title">Pas encore de compte ?</legend>
        <a href="{{ path('app_register') }}" class="login-register-link btn btn-primary">Inscrivez-vous</a>
    </fieldset>
</div>
{% endblock %} 