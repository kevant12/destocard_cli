{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/common.css">
{% endblock %}

{% block body %}
<div class="reset-request-container">
    <a href="{{ path('app_login') }}" class="back-arrow" title="Retour à la connexion">&#8592; Connexion</a>
    <h1 class="reset-request-title">Mot de passe oublié</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success reset-request-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-error reset-request-error">{{ message }}</div>
    {% endfor %}

    <div class="reset-request-form-block">
        {{ form_start(resetForm, {'attr': {'class': 'reset-request-form', 'aria-labelledby': 'reset-request-title'}}) }}
            <div class="reset-request-form-group">{{ form_row(resetForm.email, {'attr': {'aria-label': 'Adresse email'}}) }}</div>
            <button type="submit" class="reset-request-btn btn btn-add" aria-label="Envoyer le lien de réinitialisation">Envoyer le lien</button>
        {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %} 