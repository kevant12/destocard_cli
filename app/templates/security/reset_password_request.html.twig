{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="auth-page">
    <div class="auth-card">
        <h1 class="site-title">Mot de passe oublié</h1>

        <p class="text-center" style="margin-bottom: 1.5rem; color: var(--secondary-text-color);">
            Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
        </p>

        {{ form_start(resetForm) }}
            {{ form_row(resetForm.email) }}

            <button class="btn btn--primary" style="width:100%; margin-top: 1rem;">
                Envoyer le lien de réinitialisation
            </button>
        {{ form_end(resetForm) }}

        <div class="auth-links">
            <a href="{{ path('app_login') }}">Retour à la connexion</a>
        </div>
    </div>
</div>
{% endblock %} 