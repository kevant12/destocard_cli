{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
  
{% endblock %}

{% block body %}
<div class="reset-container">
    <a href="{{ path('app_login') }}" class="back-arrow" title="Retour à la connexion">&#8592; Connexion</a>
    <h1 class="reset-title">Nouveau mot de passe</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success reset-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-error reset-error">{{ message }}</div>
    {% endfor %}

    <div class="reset-form-block">
        {{ form_start(resetForm, {'attr': {'class': 'reset-form', 'aria-labelledby': 'reset-title'}}) }}
            <div class="reset-form-group">{{ form_row(resetForm.password, {'attr': {'aria-label': 'Nouveau mot de passe'}}) }}</div>
            <button type="submit" class="reset-btn btn btn-add" aria-label="Réinitialiser le mot de passe">Réinitialiser</button>
        {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %} 